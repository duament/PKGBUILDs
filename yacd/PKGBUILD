
pkgname=yacd
pkgver=0.1.2
pkgrel=1
pkgdesc="Yet Another Clash Dashboard"
arch=('any')
url="https://github.com/haishanh/yacd"
license=('MIT')
depends=()
makedepends=('yarn')
source=("$pkgname-$pkgver.tar.gz::https://github.com/haishanh/yacd/archive/v$pkgver.tar.gz")
sha256sums=('a58b69293f3518b0031d9ced9567e37effc32fedddb9492f54a25cab189b278d')

prepare() {
	cd $srcdir/$pkgname-$pkgver
	yarn install
}

build() {
	cd $srcdir/$pkgname-$pkgver
	yarn run build
}

package() {
	install -dm755 $pkgdir/usr/share/webapps/$pkgname
	install -Dm644 $srcdir/$pkgname-$pkgver/public/* $pkgdir/usr/share/webapps/$pkgname/
}
